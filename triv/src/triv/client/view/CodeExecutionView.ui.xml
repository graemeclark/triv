<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'>
        
  <ui:style> 
    .centerStyle
    {
      width: 800px; 
      margin: 0 auto 0 auto; 
    }
  </ui:style> 

  <g:VerticalPanel styleName='{style.centerStyle}'>
   
    <g:Cell horizontalAlignment="ALIGN_CENTER">
  	  <g:Label ui:field="state" width="500px"/>
    </g:Cell>

  	<g:Cell horizontalAlignment="ALIGN_CENTER">
  		<g:Button ui:field="btnStep" text="Execute"/>
  	</g:Cell>
  	
  	<g:Cell horizontalAlignment="ALIGN_CENTER">
  		<g:Label ui:field="error" width="500px"/>
  	</g:Cell>
  	
  </g:VerticalPanel>

</ui:UiBinder>